<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">
    <LinearLayout
        android:id="@+id/layout_diff"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="@dimen/size_text_home_nav"
        android:text="@string/difficulty2"
        android:id="@+id/for_hard"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/difficulty1"
        android:textSize="@dimen/size_text_home_nav"
        android:id="@+id/for_easy"/>
    </LinearLayout>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/pos_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="5dp"
        android:textSize="@dimen/size_text_home_sign"
        />

    <TextView
        android:id="@+id/pseudo_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/size_text_home_sign"
        />

    <TextView
        android:id="@+id/score_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginEnd="5dp"
        android:textSize="@dimen/size_text_home_sign"
        />
    </RelativeLayout>
</LinearLayout>

</RelativeLayout>